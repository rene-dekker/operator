{
  "apiVersion": "projectcalico.org/v3",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "allow-tigera.tigera-alertmanager-mesh",
    "namespace": "tigera-prometheus"
  },
  "spec": {
    "order": 1,
    "tier": "allow-tigera",
    "selector": "(app == 'alertmanager' && alertmanager == 'tigera-alertmanager') || (app.kubernetes.io/name == 'alertmanager' && alertmanager == 'tigera-alertmanager')",
    "types": [
      "Ingress",
      "Egress"
    ],
    "ingress": [
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "selector": "(app == 'alertmanager' && alertmanager == 'tigera-alertmanager') || (app.kubernetes.io/name == 'alertmanager' && alertmanager == 'tigera-alertmanager')",
          "ports": [
            9094
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "selector": "(app == 'alertmanager' && alertmanager == 'tigera-alertmanager') || (app.kubernetes.io/name == 'alertmanager' && alertmanager == 'tigera-alertmanager')",
          "ports": [
            9094
          ]
        }
      }
    ],
    "egress": [
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "selector": "(app == 'alertmanager' && alertmanager == 'tigera-alertmanager') || (app.kubernetes.io/name == 'alertmanager' && alertmanager == 'tigera-alertmanager')",
          "ports": [
            9094
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "selector": "(app == 'alertmanager' && alertmanager == 'tigera-alertmanager') || (app.kubernetes.io/name == 'alertmanager' && alertmanager == 'tigera-alertmanager')",
          "ports": [
            9094
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'kube-system'",
          "selector": "k8s-app == 'kube-dns'",
          "ports": [
            53
          ]
        }
      }
    ]
  }
}
