{
  "apiVersion": "projectcalico.org/v3",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "allow-tigera.tigera-prometheus",
    "namespace": "tigera-prometheus"
  },
  "spec": {
    "order": 1,
    "tier": "allow-tigera",
    "selector": "k8s-app == 'tigera-prometheus'",
    "types": [
      "Ingress",
      "Egress"
    ],
    "ingress": [
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "ports": [
            9095
          ]
        }
      }
    ],
    "egress": [
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'tigera-prometheus'",
          "selector": "(app == 'prometheus' && prometheus == 'calico-node-prometheus') || (app.kubernetes.io/name == 'prometheus' && prometheus == 'calico-node-prometheus')",
          "ports": [
            9095
          ]
        }
      }
    ]
  }
}
